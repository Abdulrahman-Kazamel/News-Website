@model NewsWebsite.Core.Models.Category

<section class="container pt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h3 class="fw-bold">📂 Category Details</h3>
        <div>
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-outline-secondary me-2">
                <i class="bi bi-pencil"></i> Edit
            </a>
            <a asp-action="Index" class="btn btn-primary">
                <i class="bi bi-arrow-left"></i> Back to List
            </a>
        </div>
    </div>

    <div class="card shadow-sm rounded-3">
        <div class="card-body">

            @* <div class="row mb-3">
                <div class="col-sm-3 fw-semibold text-muted">ID</div>
                <div class="col-sm-9">@Model.Id</div>
            </div> *@

            <div class="row mb-3">
                <div class="col-sm-3 fw-semibold text-muted">Icon</div>
                <div class="col-sm-9 fs-3">@Model.TitleIcon</div>
            </div>

            <div class="row mb-3">
                <div class="col-sm-3 fw-semibold text-muted">Name</div>
                <div class="col-sm-9 fw-semibold">@Model.Name</div>
            </div>

            <div class="row">
                <div class="col-sm-3 fw-semibold text-muted">Description</div>
                <div class="col-sm-9">
                    <p class="border rounded p-2 bg-light">@Model.Description</p>
                </div>
            </div>

        </div>
    </div>
</section>
