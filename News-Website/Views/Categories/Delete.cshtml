@model Category

@{
    ViewData["Title"] = "Delete Category";
    
}

<h1>Delete Category</h1>

<h3>Are you sure you want to delete this category?</h3>

<div class="card shadow-sm p-3 rounded">
    <dl class="row">
        <dt class="col-sm-2">@Html.DisplayNameFor(m => m.TitleIcon)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(m => m.TitleIcon)</dd>

        <dt class="col-sm-2">@Html.DisplayNameFor(m => m.Name)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(m => m.Name)</dd>

        <dt class="col-sm-2">@Html.DisplayNameFor(m => m.Description)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(m => m.Description)</dd>
    </dl>

    <form asp-action="Delete" asp-controller="Categories" asp-area="Admin" method="post">
        <input type="hidden" asp-for="Id" />

        <div class="mt-3">
            <button type="submit" class="btn btn-danger">
                <i class="bi bi-trash"></i> Confirm Delete
            </button>
            <a asp-action="Index" asp-controller="Categories" asp-area="Admin" class="btn btn-secondary">
                Back to List
            </a>
        </div>
    </form>
</div>
