@model NewsWebsite.Core.Models.Contact

<section class="container pt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h3 class="fw-bold">📋 Contact Details</h3>
        <div>
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-outline-secondary me-2">
                <i class="bi bi-pencil"></i> Edit
            </a>
            <a asp-action="Index" class="btn btn-primary">
                <i class="bi bi-arrow-left"></i> Back to List
            </a>
        </div>
    </div>

    <div class="card shadow-sm rounded-3">
        <div class="card-body">
            @* <div class="row mb-3">
                <div class="col-sm-3 fw-semibold text-muted">ID</div>
                <div class="col-sm-9">@Model.Id</div>
            </div> *@

            <div class="row mb-3">
                <div class="col-sm-3 fw-semibold text-muted">Name</div>
                <div class="col-sm-9">@Model.Name</div>
            </div>

            <div class="row mb-3">
                <div class="col-sm-3 fw-semibold text-muted">Email</div>
                <div class="col-sm-9">@Model.Email</div>
            </div>

            <div class="row mb-3">
                <div class="col-sm-3 fw-semibold text-muted">Phone</div>
                <div class="col-sm-9">@Model.Phone</div>
            </div>

            <div class="row mb-3">
                <div class="col-sm-3 fw-semibold text-muted">Subject</div>
                <div class="col-sm-9">
                    <span class="badge bg-info text-dark">@Model.Subject</span>
                </div>
            </div>

            <div class="row">
                <div class="col-sm-3 fw-semibold text-muted">Message</div>
                <div class="col-sm-9">
                    <p class="border rounded p-2 bg-light">@Model.Message</p>
                </div>
            </div>
        </div>
    </div>
</section>
