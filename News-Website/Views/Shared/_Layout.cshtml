			<!-- Bottom Bar -->
			<div class="text-center border-top border-secondary pt-3 mt-4">
				<p class="small mb-1">© @DateTime.Now.Year <strong>Medicio</strong>. All Rights Reserved</p>
				<p class="small text-muted mb-0">
					Designed by <a href="https://bootstrapmade.com/" class="text-decoration-none text-light">BootstrapMade</a>
				</p>
			</div>
		</div>
	</footer>

	<!-- End Footer -->
	<!-- Scroll Top -->
	<a href="#" id="scroll-top" class="scroll-top d-flex align-items-center justify-content-center">
		<i class="bi bi-arrow-up-short"></i>
	</a>

	<!-- Preloader -->
	<div id="preloader"></div>

	<!-- Vendor JS Files -->
	<script src="~/lib/bootstrap/js/bootstrap.bundle.min.js"></script>
	<script src="~/lib/aos/aos.js"></script>
	<script src="~/lib/glightbox/js/glightbox.js"></script>
	<script src="~/assets/vendor/purecounter/purecounter_vanilla.js"></script>
	<script src="~/lib/swiper/swiper-bundle.min.js"></script>

	<!-- Main JS File -->
	<script src="~/assets/js/main.js"></script>

	@await RenderSectionAsync("Scripts", required: false)

</body>
</html>
