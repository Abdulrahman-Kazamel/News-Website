@{
	ViewData["title"] = "Home";
}

<!DOCTYPE html>
<html lang="en">

<head>
	<meta charset="utf-8">
	<meta content="width=device-width, initial-scale=1.0" name="viewport">
	<title>News | @ViewData["title"]</title>
	<meta name="description" content="">
	<meta name="keywords" content="">

	<!-- Favicons -->
	<link rel="icon" type="image/x-icon" href="~/favicon.png" />

	<!-- Fonts -->
	<link href="https://fonts.googleapis.com" rel="preconnect">
	<link href="https://fonts.gstatic.com" rel="preconnect" crossorigin>
	<link href="https://fonts.googleapis.com/css2?family=Roboto&family=Poppins&family=Raleway&display=swap" rel="stylesheet">

	<!-- Vendor CSS Files -->
	<link href="~/lib/bootstrap/css/bootstrap.min.css" rel="stylesheet">
	<link href="~/lib/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
	<link href="~/lib/aos/aos.css" rel="stylesheet">
	<link href="~/assets/vendor/fontawesome-free/css/all.min.css" rel="stylesheet">
	<link href="~/lib/glightbox/css/glightbox.min.css" rel="stylesheet">
	<link href="~/lib/swiper/swiper-bundle.min.css" rel="stylesheet">

	<!-- Main CSS File -->
	<link href="~/assets/css/main.css" rel="stylesheet">
</head>

<body class="index-page">

	<!-- ======= Header ======= -->
	<header id="header" class="header sticky-top">
		<div class="topbar d-flex align-items-center">
			<div class="container d-flex justify-content-center justify-content-md-between">
				<div class="d-none d-md-flex align-items-center">
					@{
						var now = DateTime.Now;
						var day = now.DayOfWeek;
						var time = now.TimeOfDay;
						var isWorkingDay = day != DayOfWeek.Friday;
						var isWorkingTime = time >= new TimeSpan(9, 0, 0) && time <= new TimeSpan(23, 0, 0);
						var isOpen = isWorkingDay && isWorkingTime;
						var color = isOpen ? "green" : "red";
						var status = isOpen ? "Open Now" : "Closed";
					}
					<i class="bi bi-clock mr-2" style="color:@color"></i>
					<div>
						<strong>Today:</strong> @now.ToString("dddd - hh:mm tt")
						<strong style="color:@color">@status</strong>
					</div>
				</div>
				<div class="d-flex align-items-center ml-md-4">
					<i class="bi bi-phone mr-2"></i> Call us now +2 010-668-947-29
				</div>
			</div>
		</div>

		<div class="branding d-flex align-items-center">
			<div class="container d-flex align-items-center justify-content-between">
				<a asp-controller="Home" asp-action="Index" class="logo d-flex align-items-center mr-auto">
					<img src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcRN0s2iPqwcGRvHdOjPhTUVWxfb2Flce9R6Udn7rwFm4mz5Ij4oU3cx-SM&s" alt="Logo">
				</a>

				<nav id="navmenu" class="navmenu">
					<ul>
						<li><a asp-controller="Home" asp-action="Index">Home</a></li>

						<li><a asp-controller="Categories" asp-action="CategoryNews">News</a></li>

						@if (User.IsInRole("Admin"))
						{
							<li><a asp-controller="NewsPosts" asp-action="Index">News Admin</a></li>

							<li><a asp-controller="Contacts" asp-action="Index">Contacts</a></li>
							<li><a asp-controller="Categories" asp-action="Index">Category</a></li>
						}

						@* <li><a asp-controller="Home" asp-action="Index" asp-fragment="contact">Contact Us</a></li> *@
						<partial name="_LoginPartial" />
					</ul>
					<i class="mobile-nav-toggle d-lg-none bi bi-list"></i>
				</nav>

				<a class="cta-btn ml-3" asp-controller="Home" asp-action="Index" asp-fragment="contact">Make an Appointment</a>
			</div>
		</div>
	</header>
	<!-- End Header -->

	<main class="main">
		@RenderBody()
	</main>

	<!-- ======= Footer ======= -->
	<footer id="footer" class="bg-dark text-light pt-5">
		<div class="container">
			<div class="row">

				<!-- About & Contact -->
