@model IEnumerable<NewsPost>

@{
    ViewData["title"] = "News";
}


<div class="container my-4">

    <div class="card shadow-sm">
        <div class="card-header d-flex justify-content-between align-items-center">
            <h3 class="mb-0">Manage All Posts</h3>
            <a class="btn btn-success" asp-action="Create">
                <i class="fa fa-plus"></i> Create New
            </a>
        </div>

        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover table-striped mb-0">
                    <thead class="thead-dark">
                        <tr>
                            <th>Title</th>
                            <th>Date</th>
                            <th>Image</th>
                            <th>Topic</th>
                            <th>Category</th>
                            <th class="text-center">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="align-middle ">@item.Title</td>
                                <td class="align-middle">@item.Date.ToString("MMM dd, yyyy")</td>
                                <td class="align-middle">
                                    <img src="~/assets/img/gallery/@item.Image" class="img-fluid rounded" style="width: 100px; height:60px" />
                                </td>
                                <td class="align-middle">
                                    <span class="badge badge-primary text-dark">@item.Topic</span>
                                </td>
                                <td class="align-middle">
                                    <span class="badge badge-info text-dark">@item.Category.Name</span>
                                </td>
                                <td class="text-center">
                                    <a asp-action="Details" asp-route-id="@item.Id"
                                       class="btn btn-sm btn-outline-info me-1" title="View">
                                        <i class="bi bi-eye"></i>
                                    </a>
                                    <a asp-action="Edit" asp-route-id="@item.Id"
                                       class="btn btn-sm btn-outline-secondary me-1" title="Edit">
                                        <i class="bi bi-pencil"></i>
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@item.Id"
                                       class="btn btn-sm btn-outline-danger" title="Delete">
                                        <i class="bi bi-trash"></i>
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

</div>
