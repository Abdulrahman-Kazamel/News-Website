@model NewsPost

<div class="container mt-4">
    <div class="card shadow-sm border-0">
        <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
            <h4 class="mb-0">News Details</h4>
            <small class="text-light">ID: @Model.Id</small>
        </div>

        <div class="card-body">
            <h5 class="card-title">@Model.Title</h5>
            <p class="text-muted mb-2"><i class="far fa-calendar-alt"></i> @Model.Date.ToString("dd MMM yyyy")</p>

            @if (!string.IsNullOrEmpty(Model.Image))
            {
                <div class="mb-3 text-center">
                    <img src="@Url.Content(Model.Image)" alt="@Model.Title" class="img-fluid rounded shadow-sm" style="max-height:300px;" />
                </div>
            }
            else
            {
                <p class="text-muted">No image available</p>
            }

            <p><strong>Topic:</strong> @Model.Topic</p>
            <p><strong>Category:</strong> @Model.CategoryId</p>
        </div>

        <div class="card-footer bg-light d-flex justify-content-between">
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning btn-sm">
                <i class="fas fa-edit"></i> Edit
            </a>
            <a asp-action="Index" class="btn btn-secondary btn-sm">
                <i class="fas fa-arrow-left"></i> Back to List
            </a>
        </div>
    </div>
</div>
