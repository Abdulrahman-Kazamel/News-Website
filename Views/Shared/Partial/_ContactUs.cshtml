@model Contact


<section id="contact" class="section contact bg-light py-5  ">

    <!-- Section Title -->
    <div class="container text-center mb-5" data-aos="fade-up">
        <h2 class="fw-bold">Contact</h2>
        <p class="text-muted">Necessitatibus eius consequatur ex aliquid fuga eum quidem sint consectetur velit</p>
    </div>

    <!-- Contact Info + Form -->
    <div class="container" data-aos="fade-up" data-aos-delay="100">
        <div class="row gy-5">

            <!-- Info Boxes -->
            <div class="col-lg-6">
                <div class="row g-4">
                    <div class="col-12">
                        <div class="bg-white shadow-sm rounded text-center p-4 h-100">
                            <i class="bi bi-geo-alt fs-2 text-primary mb-3"></i>
                            <h5 class="fw-bold">Address</h5>
                            <p class="mb-0">A108 Adam Street, New York, NY 535022</p>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="bg-white shadow-sm rounded text-center p-4 h-100">
                            <i class="bi bi-telephone fs-2 text-primary mb-3"></i>
                            <h5 class="fw-bold">Call Us</h5>
                            <p class="mb-0">+1 5589 55488 55</p>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="bg-white shadow-sm rounded text-center p-4 h-100">
                            <i class="bi bi-envelope fs-2 text-primary mb-3"></i>
                            <h5 class="fw-bold">Email Us</h5>
                            <p class="mb-0">info@example.com</p>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Contact Form -->
            <div class="col-lg-6">
                <form asp-action="ContactUs" method="post">
                    <div class="row g-3">

                        <div class="col-md-6">
                            <input type="text" asp-for="Name" class="form-control" placeholder="Your Name">
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>

                        <div class="col-md-6">
                            <input type="email" asp-for="Email" class="form-control" placeholder="Your Email">
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                        <div class="col-12">
                            <input type="text" asp-for="Phone" class="form-control" placeholder="Please enter your phone">
                            <span asp-validation-for="Phone" class="text-danger"></span>
                        </div>
                        <div class="col-12">
                            <input type="text" asp-for="Subject" class="form-control" placeholder="Subject">
                            <span asp-validation-for="Subject" class="text-danger"></span>
                        </div>

                        <div class="col-12">
                            <textarea asp-for="Message" class="form-control" rows="5" placeholder="Message"></textarea>
                            <span asp-validation-for="Message" class="text-danger"></span>
                        </div>

                        <div class="col-12 text-center">
                            <div class="loading d-none">Loading</div>
                            <div class="error-message text-danger"></div>

                            @* <div class="sent-message text-success">Your message has been sent. Thank you!</div> *@

                            <button type="submit" class="btn btn-primary px-5 rounded-pill">Send Message</button>
                        </div>

                    </div>
                </form>
            </div>

        </div>
    </div>

</section>
