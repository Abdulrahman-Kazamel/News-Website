@model List<Category>



@{
    ViewData["Title"] = "Home Page";
}




<section id="featured-services" class="featured-services py-5">
    <div class="container" data-aos="fade-up">

        <h2 class="text-center mb-4">Services</h2>
        <div class="row g-4">
            @foreach (var item in Model)
            {
                <div class="col-xl-3 col-lg-4 col-md-6" data-aos="fade-up" data-aos-delay="100">
                    <div class="service-item position-relative h-100 border rounded shadow-sm text-center" style="width:100%; height:100%; ">
                        <div class="icon mb-3 text-primary fs-2">
                            <i class="@item.TitleIcon"> </i>
                        </div>
                        <h5 class="mb-2">
                            <a asp-controller="Categories" asp-action="Details" asp-route-id="@item.Id" class="stretched-link text-decoration-none text-dark">@item.Name</a>
                        </h5>
                        <p class="text-muted mb-0">@item.Description</p>
                    </div>
                </div>
            }
        </div>
    </div>
</section>


